project.name=<%= @project_name %>
resources.source.1.config.requireFileExists=false
project.ssh-authentication=privateKey
service.NodeExecutor.default.provider=jsch-ssh
resources.source.1.config.includeServerNode=true
resources.source.1.config.generateFileAutomatically=true
resources.source.1.config.format=resourceyaml
resources.source.1.config.file=<%= scope.lookupvar('rundeck::params::project_dir') -%>/projects/${project.name}/etc/resources.yaml
<% if @resources_user and @resources_pass and @resources_url -%>
resources.source.2.url=http\://<%= @resources_user-%>\:<%= @resources_pass-%>@<%= @resources_url -%>/hosts?rundeck\=true&format\=yaml
<% end -%>
project.ssh-keypath=<%= scope.lookupvar('rundeck::params::home_dir') -%>/.ssh/id_rsa
service.FileCopier.default.provider=jsch-scp
resources.source.1.type=file
